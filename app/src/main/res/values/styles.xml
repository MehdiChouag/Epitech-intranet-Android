<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerListStyle">
        <item name="android:background">@color/background_material_light</item>
        <item name="android:textColor">@color/background_material_dark</item>
        <item name="android:entries">@array/drawer_item</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:maxLength">8</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TitleHomeFragment">
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">#BDBDBD</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SpinnerModule" parent="android:Widget.Holo.Light.Spinner" />

    <style name="TitleTrombiDetailFragment" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
